{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true
  },

  "extends": [
    "../es3/.eslintrc.js",
    "../es2015/.eslintrc.js"
  ],

  "plugins": [
    "import"
  ],

  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },

  "rules": {
    "import/first": 0
  }
}
